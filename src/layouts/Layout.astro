---
import Header from '../components/common/Header.astro';
import Footer from '../components/common/Footer.astro';

interface Props {
  title: string;
  siteName?: string;
  siteUrl?: string;
  description?: string;
  type: 'website' | 'article'; // TOPページ以外は'article'を指定
}

const {
  title,
  siteName = 'サイト名',
  siteUrl = 'https://github.com/mtmtmk31/template-astro-lp',
  description = 'ディスクリプション',
  type = 'website',
} = Astro.props;
---

<!doctype html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={description} />
    <meta property="og:description" content={description} />
    <meta property="og:site_name" content={siteName} />
    <meta property="og:title" content={title} />
    <meta property="og:type" content={type} />
    <meta property="og:url" content={siteUrl} />
    <meta property="og:locale:alternate" content="ja_JP" />
    <meta property="og:image" content=`${siteUrl}/assets/images/ogp.png` />
    <link rel="icon" type="image/svg+xml" href="/assets/images/favicon.png" />
    <title>{title}</title>
  </head>
  <body>
    <Header />
    <slot />
    <Footer />
  </body>
</html>
<style is:global lang="scss">
  :root {
    --accent: 136, 58, 234;
    --accent-light: 224, 204, 250;
    --accent-dark: 49, 10, 101;
    --accent-gradient: linear-gradient(
      45deg,
      rgb(var(--accent)),
      rgb(var(--accent-light)) 30%,
      white 60%
    );
  }
  * {
    margin: 0;
    padding: 0;
  }

  html {
    background: #13151a;
    background-size: 224px;
    font-family: "Inter", "Noto Sans JP", sans-serif;
    font-optical-sizing: auto;
    font-size: 62.5%;
    font-style: normal;
    font-weight: 600;
    font-variation-settings: "slnt" 0;
  }

  h1,
  h2,
  h3,
  h4,
  h5,
  h6 {
    font-size: 1rem;
  }

  a {
    color: inherit;
    text-decoration: none;
  }

  img {
    height: auto;
    max-height: 100%;
    max-width: 100%;
    width: auto;
  }

  code {
    font-family:
      Menlo,
      Monaco,
      Lucida Console,
      Liberation Mono,
      DejaVu Sans Mono,
      Bitstream Vera Sans Mono,
      Courier New,
      monospace;
  }
</style>
<script src="../assets/scripts/main.js"></script>
